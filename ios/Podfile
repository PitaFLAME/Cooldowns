# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_application_path = File.expand_path('..', __dir__)
flutter_root = File.expand_path('flutter', Dir.pwd)
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_install_all_ios_pods(flutter_application_path)
  flutter_root = File.expand_path("#{flutter_application_path}/../..")
  load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))

  target 'RunnerTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

# Prevent Cocoapods from embedding a framework by default
install! 'cocoapods', :disable_input_output_paths => true

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end