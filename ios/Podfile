# Podfile
platform :ios, '12.0'

# ignore all warnings from all pods
inhibit_all_warnings!

flutter_application_path = File.expand_path('..', __dir__)
flutter_root = ENV['FLUTTER_ROOT'] || File.expand_path(File.join(flutter_application_path, '..', '..', 'flutter'))
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end